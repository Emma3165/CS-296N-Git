@model Eugene.Models.Message

@{ 
    ViewBag.Title = "New Message Form";
}

@{ Layout = "_BasicLayout";}

<form asp-controller="Message" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Subject">Subject</label>
        <input class="form-control" subject="Subject" />
        @*<input asp-for="Subject" />*@
    </div>

    <div class="form-group">
        <label asp-for="Body">Body</label>
        <input class="form-control" body="Body" />
    </div>

    <div class="form-group">
        <label asp-for="Date">Date</label>
        <input class="form-control" date="Date" />
    </div>

    <div class="form-group">
        <label asp-for="From">From</label>
        <input class="form-control" from="From" />
    </div>

    <div class="form-group">
        <label asp-for="Topic">Topic</label>
        <input class="form-control" topic="Topic" />
    </div>
    <button tye="submit" class="btn btn-primary ">Add</button>
    @*@Html.ActionLink("Message", "Add", "Message")*@
    <a class="btn btn-primary" href="/Message/List">Cancel</a>
   
</form>
   